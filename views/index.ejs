<!DOCTYPE html>
<html lang="en">
	<!-- HEAD -->
	<%- include("partials/head.ejs")  %> 
	<!-- HEAD -->
<body>
  <!-- Header -->
  <%- include("partials/header.ejs")  %> 
	<!-- /Header -->
	
<!-- Banner -->
<section class="banner" >
	
    <div class="banner__info">
        <h1 class="banner__title">El futuro en tus manos</h1>
		<p class="banner__p">Bienvenido a Codear, aqui encontraras cursos extraordinarios los               cuales se encargaran de crearte una experiencia involvidable!</p>
	
    </div>
</section>
<!-- /Banner -->

<!-- ultima visita -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			<p></p>
		</div>
		<% visitedProducts.forEach(product => { %>
		 <div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href="/cursos/detail/<%- product.id %> ">
					<figure class="product-box_image">
						<img src="/images/<%- product.image %> " alt="imagen de producto">
					</figure>
					<article class="product-box_data">
						<h2>$<%- toThousand(product.price - Math.round(product.price / 100 * product.discount)) %> </h2>
						<% if (product.discount > 0) { %>
							<span><%- product.discount %>% OFF</span>
						<% } %>
						<p><%- product.description %></p>
					</article>
				</a>
			</section>
		</div>
		<% }) %>
		
	</div>
</div>
<!-- /ultima visita -->

<!-- Ofertas -->
<div class="container products-wrapper">
	<div class="row">
		<div class="col-12">
			<h2 class="products-title">Ofertas</h2>
		</div>
		<% saleProducts.forEach(product => { %>
		 <div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
				<a href="/products/detail/<%- product.id %> ">
					<figure class="product-box_image">
						<img src="/images/<%- product.image %> " alt="imagen de producto">
					</figure>
					<article class="product-box_data">
						<h2>$<%- toThousand(product.price - Math.round(product.price / 100 * product.discount)) %> </h2>
						<% if (product.discount > 0) { %>
							<span><%- product.discount %>% OFF</span>
						<% } %>
						<p><%- product.description %></p>
					</article>
				</a>
			</section>
		</div>
		<% }) %>
	</div>
</div>
<!-- /Ofertas -->

	<!-- FOOTER -->
	<%- include("partials/footer.ejs")  %> 
	<!-- FOOTER -->

</body>
</html>